{
  "compilerOptions": {
    "target": "ES2024",
    "noEmit": false,
    "allowJs": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "module": "ESNext",
    "declaration": true,
    "declarationDir": "dist",
    "outDir": "dist",
    "emitDeclarationOnly": false,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}