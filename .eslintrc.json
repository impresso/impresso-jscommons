{
  "root": true,
  "extends": [
    "standard",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules":{
    "no-underscore-dangle": "off",
    "func-names": "off",
    "class-methods-use-this": "off",
    "no-console": "off",
    "prefer-destructuring": "off",
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "ts": "never"
      }
    ],
    "no-param-reassign": ["error",
      {
        "props": false 
      }
    ]
  },
  "env": {
    "mocha": true,
    "es6": true,
    "node": true
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".ts"]
      }
    }
  },
  "overrides": [
    {
      "files": ["*.js", "*.ts"],
      "excludedFiles": "src/generated/*_pb.js"
    }
  ]
}